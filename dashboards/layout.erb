<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%= yield_content(:title) %></title>

  <!-- The javascript and css are managed by sprockets. The files can be found in the /assets folder-->
  <script type="text/javascript" src="/assets/application.js"></script>
  <link rel="stylesheet" href="/assets/application.css">

  <link href='//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700' rel='stylesheet' type='text/css'>
  <link rel="icon" href="/assets/favicon.ico">

</head>
  <body>
    <button id="fail">Fail Monitor</button>
    <button id="move">Move Failing Monitors</button>
    <button id="reset">Reset</button>
    <div id="tier"><%= yield_content(:tier) %> Tier</div>
    <div id="container">
      <%= yield %>
    </div>
  
    <% if development? %>
      <div id="saving-instructions">
        <p>Paste the following at the top of <i><%= params[:dashboard] %>.erb</i></p>
        <textarea id="gridster-code"></textarea>
      </div>
      <a href="#saving-instructions" id="save-gridster">Save this layout</a>
    <% end %>
    <script type="application/javascript">
      $(function(){

        var failingMonitors = $();
        var passingMonitors = $();
        var failingListItems = $();
        var passingListItems = $();

        $("#fail").click( function()
            {
              $.fn.changeClasses();
            }
        );
        $("#move").click( function()
            {
              $.fn.moveFailingMonitors();
            }
        );
        $("#reset").click( function()
            {
              $.fn.reset();
            }
        );
        $.fn.reinit = function () {
          failingMonitors = $( "div.status-unavailable" );
          passingMonitors = $( "div.status-available" );
          failingListItems = failingMonitors.parent();
          passingListItems = passingMonitors.parent();
        };
        $.fn.reset = function(){
          $.fn.reinit();
          failingListItems.attr("data-col", "2");
          passingListItems.attr("data-col", "1");
          failingMonitors.removeClass("status-unavailable");
          failingMonitors.addClass("status-available");
        };
        $.fn.changeClasses = function(){
          var validateSessionMonitor = $("div[data-id='validate-session']");
          validateSessionMonitor.removeClass("status-available");
          validateSessionMonitor.addClass("status-unavailable");
        };
        $.fn.moveFailingMonitors = function(){
          $.fn.reinit();
          failingListItems.attr("data-col", "1");
          passingListItems.attr("data-col", "2");
          //$.fn.gridster().generate_grid_and_stylesheet();
        };

      });
    </script>
  </body>
</html>